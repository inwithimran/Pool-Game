{
    "name": "billiards",
    "description": "Billiards",
    "version": "0.3.0",
    "author": "tailuge",
    "main": "dist/main.js",
    "license": "GPL-3.0",
    "engines": {
        "yarn": "1.x"
    },
    "scripts": {
        "test": "jest --verbose",
        "coverage": "jest --coverage --coverageReporters json",
        "dev": "webpack ",
        "prettify": "prettier --write --no-semi {src,test}/**/*.[jt]s",
        "serve": "webpack serve --client-web-socket-url $(gp url 8080 | sed 's/http/ws/' | sed 's#$#/ws#')",
        "deps": "npx yarn-check --skip-unused",
        "websocket": "nodemon src/server/server.ts",
        "build": "pwd; cd server; pwd; yarn build",
        "start": "pwd; cd server; pwd; yarn install; yarn start"
    },
    "nodemonConfig": {
        "watch": [
            "src/server"
        ],
        "ext": "ts",
        "delay": "2",
        "execMap": {
            "ts": "ts-node"
        }
    },
    "dependencies": {
        "three": "^0.150.1"
    },
    "devDependencies": {
        "@types/chai": "^4.3.4",
        "@types/jest": "^29.4.0",
        "chai": "^4.3.7",
        "ini": "^3.0.1",
        "jest": "^29.4.3",
        "jest-environment-jsdom": "^29.4.3",
        "mocha": "^10.2.0",
        "node-notifier": "^10.0.1",
        "nodemon": "^2.0.21",
        "prettier": "^2.8.4",
        "ts-jest": "^29.0.5",
        "ts-loader": "^9.4.2",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.5",
        "webpack": "^5.76.0",
        "webpack-cli": "^5.0.1",
        "webpack-dev-server": "^4.11.1"
    }
}
